    body
        .container.pt-4.text-center
            .row
                .col-lg-4
                .col-lg-4
                    h1 Мои Результаты
                    .row
                    .col-lg-12
                        p2= 'Колличество Звонков:'+total
                        p2= 'Колличество Лидов:'+leads
        .container.text-center
            .row
                .col-lg-12.pt-4
                    h1 Лиды
                    .row
                        .col-lg-6.pt-2
                            h3 Good Morning
                            p1#gm= goodMorning
                        .col-lg-6.pt-2
                            h3 Key to Call
                            p1#ktk= keyToCall
        .container.text-center
            .row
                .col-lg-12.probel
        .container.pt-4.text-center
            .row
                .col-lg-12
                    h1 Моя Зарплата
                    .row
                        .col-lg-6.pt-1
                            h3 Оклад
                            p1 10 000 рублей
                        .col-lg-6.pt-1
                            h3 Сдельная часть
                            p1= goodMorning * 500 + keyToCall * 1000
        .container.text-center
            .row
                .col-lg-12.probel
        .container.text-center
            .row
                .col-lg-12
                    a.btn.btn-secondary.black1(role="button") Начать Звонки
